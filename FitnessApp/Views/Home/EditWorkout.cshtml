@model FitnessApp.Models.Workout

<div class="container">
    <h2>Edit Workout Plan</h2>
    <form asp-action="EditWorkout" method="post">
        <div class="form-group">
            <label for="Type">Workout Type</label>
            <input type="text" class="form-control" id="Type" name="Type" asp-for="Type" required />
        </div>
        <div class="form-group">
            <label for="Duration">Duration (minutes)</label>
            <input type="number" class="form-control" id="Duration" name="Duration" asp-for="@Model.Duration" required />
        </div>
        <div class="form-group">
            <label for="Calories">Calories Burned</label>
            <input type="number" class="form-control" id="Calories" name="Calories" asp-for="@Model.Calories" required />
        </div>
      
        <button type="submit" class="btn btn-primary">Save Workout</button>
    </form>
</div>
