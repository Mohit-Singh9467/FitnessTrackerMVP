@model FitnessApp.Models.User

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2>@Model.Name's Profile</h2>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-4">
                    <h5>Age: <span class="text-muted">@Model.Age</span></h5>
                </div>
                <div class="col-md-4">
                    <h5>Weight: <span class="text-muted">@Model.Weight kg</span></h5>
                </div>
            </div>

            <h4>Goals</h4>
            @if (Model.Goals != null && Model.Goals.Any())
            {
                <ul class="list-group mb-3">
                    @foreach (var goal in Model.Goals)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            @goal.Description
                            <span class="badge badge-primary badge-pill">@goal.Target per week</span>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p>No goals available</p>
            }

            <!-- Add Goal Button -->
            <div class="mb-3">
                <a href="@Url.Action("AddGoal", "Home")" class="btn btn-success">
                    <i class="fas fa-plus"></i> Add Goal
                </a>
            </div>

            <h4>Workout Plan</h4>
            @if (Model.Workout != null)
            {
                <div class="row">
                    <div class="col-md-4">
                        <h5>Type: <span class="text-muted">@Model.Workout.Type</span></h5>
                    </div>
                    <div class="col-md-4">
                        <h5>Duration: <span class="text-muted">@Model.Workout.Duration minutes</span></h5>
                    </div>
                    <div class="col-md-4">
                        <h5>Calories Burned: <span class="text-muted">@Model.Workout.Calories kcal</span></h5>
                    </div>
                </div>
            }
            else
            {
                <p>No workout plan available</p>
            }

            <!-- Edit Workout Plan Button -->
            <div class="mt-3">
                <a href="@Url.Action("EditWorkout", "Home")" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Edit Workout Plan
                </a>
            </div>
        </div>
    </div>
</div>
