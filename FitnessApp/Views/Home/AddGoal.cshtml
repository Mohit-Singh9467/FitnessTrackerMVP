@model FitnessApp.Models.Goal
<div class="container">
    <h2>Add Goal</h2>
    <form asp-action="AddGoal" method="post">
        <div class="form-group">
            <label for="Description">Goal Description</label>
            <input placeholder="Description" asp-for="Description" class="form-control" />
        </div>
        <div class="form-group">
            <label for="Target">Target (per week)</label>
            <input type="number" placeholder="Target" asp-for="Target" class="form-control" />
        </div>
       
        <button type="submit" class="btn btn-success">Save Goal</button>
    </form>
</div>
